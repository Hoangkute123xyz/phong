<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="vn.hexagon.vietnhat.ui.comment.PhoneGiftViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageUserAvatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            imageAvatar="@{viewModel.listFoneHouseCommentResponse.data[viewModel.listFoneHouseCommentResponse.data.size()-position-1].avatar}"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/shape_circle_layout"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ava_nodata"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/likedMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="@{viewModel.listFoneHouseCommentResponse.data[viewModel.listFoneHouseCommentResponse.data.size()-position-1].name}"
            android:textColor="@color/color_black_vanta"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageUserAvatar"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="@{viewModel.listFoneHouseCommentResponse.data[viewModel.listFoneHouseCommentResponse.data.size()-position-1].date}"
            android:textColor="@color/color_grey_9b9b9b"
            android:textStyle="italic"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/likedMemberName"
            app:layout_constraintStart_toStartOf="@+id/likedMemberName"
            app:layout_constraintTop_toBottomOf="@+id/likedMemberName" />

        <TextView
            android:id="@+id/tvContentSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:fontFamily="@font/roboto_bold"
            android:text="@{viewModel.listFoneHouseCommentResponse.data[viewModel.listFoneHouseCommentResponse.data.size()-position-1].comment}"
            android:textColor="@color/color_black_vanta"
            app:layout_constraintEnd_toEndOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="@id/tvDate"
            app:layout_constraintTop_toBottomOf="@id/tvDate" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/tvContentSummary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>